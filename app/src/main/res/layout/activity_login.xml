<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.view.LoginActivity"
    android:orientation="vertical">

    <ImageView

        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:srcCompat="@drawable/a"
        />

    <TextView
        android:id="@+id/Username"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="160dp"
        android:layout_marginTop="30dp"
        android:text="Username or Email"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/youremail"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/edit"
        android:hint="Enter your username or email"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/Password"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="50dp"
        android:textSize="20sp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="250dp"
        android:text="Password"
        android:layout_width="match_parent"
        android:layout_height="30dp"/>

    <EditText
        android:id="@+id/yourpassword"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:background="@drawable/edit"
        android:drawableRight="@drawable/baseline_visibility_24"
        android:hint="Enter your password"
        android:textColor="@color/black"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textSize="16sp" />

    <ProgressBar
        android:id="@+id/progress"
        style="?android:attr/progressBarStyle"
        android:layout_width="69dp"
        android:layout_height="50dp"
        android:layout_marginStart="167dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="19dp"
        android:background="#F1EFF4"
        android:indeterminate="true"
        android:max="100"
        android:minWidth="200dp"
        android:minHeight="50dp"
        android:progress="0"
        android:visibility="invisible">
    </ProgressBar>



    <Button
        android:id="@+id/logn"
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="28dp"
        android:backgroundTint="#2439AC"
        android:background="@drawable/edit"
        android:text="Login"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout="@layout/activity_idn"/>

    <Button
        android:id="@+id/forgt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="28dp"

        android:background="@drawable/edit"
        android:text="Forgot username or password"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        />




</LinearLayout>